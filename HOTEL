ALTER TABLE HABITACION ADD IdHotel char(5) not null

ALTER TABLE CLIENTE ADD Num_Habitacion int not null


ALTER TABLE HOTEL ADD PRIMARY KEY (IdHotel)
ALTER TABLE HABITACION ADD PRIMARY KEY (Num_Habitacion)
